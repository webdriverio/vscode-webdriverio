{
    "name": "vscode-webdriverio",
    "displayName": "WebdriverIO",
    "description": "WebdriverIO for the vscode",
    "version": "0.0.1",
    "type": "module",
    "author": "WebdriverIO Team",
    "packageManager": "pnpm@10.8.0",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/webdriverio/vscode-webdriverio.git"
    },
    "bugs": {
        "url": "https://github.com/webdriverio/vscode-webdriverio/issues"
    },
    "keywords": [
        "WebdriverIO",
        "test",
        "typescript",
        "javascript"
    ],
    "categories": [
        "Testing"
    ],
    "engines": {
        "vscode": "^1.98.0"
    },
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript",
        "workspaceContains:**/wdio.conf.js",
        "workspaceContains:**/wdio.conf.ts"
    ],
    "main": "./dist/extension.cjs",
    "contributes": {
        "commands": [
            {
                "command": "webdriverio.configureTests",
                "title": "WebdriverIO: Configure Tests"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "webdriverio-explorer",
                    "title": "WebdriverIO Explorer",
                    "icon": "media/icon.svg"
                }
            ]
        },
        "configuration": {
            "title": "WebdriverIO",
            "properties": {
                "webdriverio.configFilePattern": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/wdio.conf.{ts,js}"
                    ],
                    "description": "Glob pattern for WebdriverIO configuration file"
                },
                "webdriverio.logLevel": {
                    "type": "string",
                    "enum": [
                        "trace",
                        "debug",
                        "info",
                        "warn",
                        "error",
                        "silent"
                    ],
                    "default": "info",
                    "description": "Set the logLevel"
                },
                "webdriverio.showOutput": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show WebdriverIO output in the test result"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "pnpm run package",
        "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "check-types": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "test:unit": "npm-run-all test:unit:*",
        "test:unit:vscode-test": "xvfb-maybe vscode-test",
        "test:unit:vitest": "vitest --run",
        "coverage": "npm-run-all coverage:*",
        "coverage:clean": "shx rm -rf ./coverage",
        "coverage:vscode-test": "xvfb-maybe vscode-test --coverage --coverage-output ./coverage/tmp && tsx scripts/coverage.ts",
        "coverage:vitest": "vitest --run --coverage",
        "coverage:merge": "nyc merge ./coverage/data/ ./coverage/merge/coverage-merge.json",
        "coverage:report": "exec nyc report --reporter html --reporter text -t ./coverage/merge --report-dir coverage/report"
    },
    "devDependencies": {
        "@babel/types": "^7.27.0",
        "@types/chai": "^5.2.1",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/sinon": "^17.0.4",
        "@types/sinon-chai": "^4.0.0",
        "@types/vscode": "^1.98.0",
        "@types/which": "^3.0.4",
        "@types/ws": "^8.18.1",
        "@vitest/coverage-v8": "^3.1.1",
        "@vitest/eslint-plugin": "^1.1.42",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "@wdio/cli": "^9.12.4",
        "@wdio/eslint": "^0.1.1",
        "@wdio/types": "^9.12.3",
        "chai": "^5.2.0",
        "esbuild": "^0.25.1",
        "eslint": "^9.23.0",
        "eslint-plugin-import-x": "^4.10.6",
        "glob": "^11.0.1",
        "husky": "^9.1.7",
        "jest-mock-vscode": "^4.3.1",
        "lint-staged": "^15.5.0",
        "mocha": "^11.1.0",
        "npm-run-all": "^4.1.5",
        "nyc": "^17.1.0",
        "prettier": "^3.5.3",
        "shelljs": "^0.10.0",
        "shx": "^0.4.0",
        "sinon": "^20.0.0",
        "sinon-chai": "^4.0.0",
        "tsx": "^4.19.3",
        "typescript": "^5.8.2",
        "vitest": "^3.1.1",
        "xvfb-maybe": "^0.2.1"
    },
    "dependencies": {
        "@babel/parser": "^7.27.0",
        "@cucumber/gherkin": "^32.1.0",
        "@cucumber/messages": "^27.2.0",
        "@types/shelljs": "^0.8.15",
        "@wdio/reporter": "^9.12.3",
        "birpc": "^2.3.0",
        "get-port": "^7.1.0",
        "recast": "^0.23.11",
        "which": "^5.0.0",
        "ws": "^8.18.1"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "edgedriver",
            "esbuild",
            "geckodriver",
            "unrs-resolver"
        ]
    },
    "lint-staged": {
        "**/*.{yml,json,md}": [
            "prettier --write --cache"
        ],
        "**/*.{cts,mts,cjs,mjs,ts,js}": [
            "prettier --write --cache",
            "eslint --fix --cache --cache-location node_modules/.cache/eslint/"
        ]
    }
}
