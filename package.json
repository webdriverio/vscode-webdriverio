{
  "name": "vscode-webdriverio",
  "displayName": "vscode-webdriverio",
  "description": "A VSCode extension for WebdriverIO",
  "version": "0.0.1",
  "publisher": "webdriverio",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:webdriverio.configFileEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "webdriverio.showOutput",
        "icon": "$(terminal)",
        "title": "WebdriverIO: Show Extension Output"
      },
      {
        "command": "webdriverio.config-explorer.refreshEntry",
        "icon": "$(refresh)",
        "title": "WebdriverIO: Update Configuration List"
      },
      {
        "command": "webdriverio.testrunner.run",
        "icon": "$(play)",
        "title": "WebdriverIO: Run"
      }
    ],
    "views": {
      "explorer": [],
      "webdriverio": [
        {
          "id": "webdriverio.config-explorer",
          "name": "Configurations",
          "icon": "assets/logo-webdriver-io.svg",
          "contextualTitle": "WebdriverIO Testrunner"
        },
        {
          "id": "webdriverio.reporter-panel",
          "name": "Testrunner",
          "type": "webview",
          "visibility": "visible",
          "icon": "assets/logo-webdriver-io.svg",
          "contextualTitle": "WebdriverIO Testrunner"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "webdriverio",
          "title": "WebdriverIO Testrunner",
          "icon": "assets/logo-webdriver-io.svg"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "webdriverio.configFileEditor",
        "displayName": "WebdriverIO Configuration",
        "selector": [
          {
            "filenamePattern": "wdio.*.js"
          },
          {
            "filenamePattern": "wdio.*.ts"
          }
        ]
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "webdriverio.testrunner.run",
          "when": "viewItem == wdioConfig",
          "group": "inline"
        },
        {
          "command": "webdriverio.config-explorer.refreshEntry",
          "when": "viewItem == wdioConfig",
          "group": "inline"
        },
        {
          "command": "webdriverio.testrunner.run",
          "when": "viewItem == wdioSuite",
          "group": "inline"
        }
      ]
    }
  },
  "icon": "assets/webdriverio.svg",
  "galleryBanner": {
    "color": "#ea5906",
    "theme": "light"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "dev": "npm run watch",
    "watch": "run-p watch:*",
    "watch:ts": "tsc -watch -p ./",
    "watch:rollup": "npx rollup --config rollup.config.mjs  --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/lodash.pick": "^4.4.6",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.4",
    "@types/serialize-javascript": "^5.0.1",
    "@types/vscode": "^1.60.0",
    "@types/workerpool": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@bendera/vscode-webview-elements": "^0.6.3",
    "@reduxjs/toolkit": "^1.6.2",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/jscodeshift": "^0.11.2",
    "@types/node-ipc": "^9.1.6",
    "@types/vscode-webview": "^1.57.0",
    "@vscode/codicons": "0.0.25",
    "@wdio/cli": "^7.16.3",
    "@wdio/reporter": "^7.16.3",
    "@wdio/types": "^7.14.1",
    "eta": "^1.12.3",
    "jscodeshift": "^0.13.0",
    "lodash.pick": "^4.4.0",
    "node-ipc": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.58.0",
    "serialize-javascript": "^6.0.0",
    "tangle": "^1.0.3",
    "ts-node": "^10.2.1",
    "workerpool": "^6.1.5"
  }
}
