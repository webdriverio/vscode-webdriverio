{
    "name": "vscode-webdriverio",
    "displayName": "WebdriverIO",
    "description": "WebdriverIO for the vscode",
    "version": "0.0.1",
    "type": "module",
    "author": "WebdriverIO Team",
    "packageManager": "pnpm@10.8.0",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/webdriverio/vscode-webdriverio.git"
    },
    "bugs": {
        "url": "https://github.com/webdriverio/vscode-webdriverio/issues"
    },
    "keywords": [
        "WebdriverIO",
        "test",
        "typescript",
        "javascript"
    ],
    "categories": [
        "Testing"
    ],
    "engines": {
        "vscode": "^1.98.0"
    },
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript",
        "workspaceContains:**/wdio.conf.js",
        "workspaceContains:**/wdio.conf.ts"
    ],
    "main": "./packages/vscode-webdriverio/dist/extension.cjs",
    "contributes": {
        "commands": [
            {
                "command": "webdriverio.configureTests",
                "title": "WebdriverIO: Configure Tests"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "webdriverio-explorer",
                    "title": "WebdriverIO Explorer",
                    "icon": "media/icon.svg"
                }
            ]
        },
        "configuration": {
            "title": "WebdriverIO",
            "properties": {
                "webdriverio.configFilePattern": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/wdio.conf.{ts,js}"
                    ],
                    "description": "Glob pattern for WebdriverIO configuration file"
                },
                "webdriverio.logLevel": {
                    "type": "string",
                    "enum": [
                        "trace",
                        "debug",
                        "info",
                        "warn",
                        "error",
                        "silent"
                    ],
                    "default": "info",
                    "description": "Set the logLevel"
                },
                "webdriverio.showOutput": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show WebdriverIO output in the test result"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "pnpm run package",
        "compile": "turbo run typecheck build --filter=./packages/*",
        "build": "turbo run build --filter=./packages/*",
        "typecheck": "turbo run typecheck --filter=./packages/*",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "turbo watch build --filter=./packages/*",
        "watch:tsc": "turbo watch typecheck --filter=./packages/*",
        "package": "turbo run package --filter=vscode-webdriverio",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "format": "prettier --cache .",
        "format:fix": "prettier --write --cache .",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "test:unit": "vitest --run",
        "coverage": "vitest --run --coverage",
        "graph": "pnpm run build --graph assets/build.png"
    },
    "devDependencies": {
        "@types/node": "20.x",
        "@types/shelljs": "^0.8.15",
        "@types/vscode": "^1.98.0",
        "@vitest/coverage-v8": "^3.1.1",
        "@vitest/eslint-plugin": "^1.1.42",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "@wdio/eslint": "^0.1.1",
        "eslint": "^9.23.0",
        "eslint-plugin-import-x": "^4.10.6",
        "husky": "^9.1.7",
        "jest-mock-vscode": "^4.3.1",
        "lint-staged": "^15.5.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.3",
        "shelljs": "^0.10.0",
        "shx": "^0.4.0",
        "tsx": "^4.19.3",
        "turbo": "^2.5.3",
        "typescript": "^5.8.2",
        "vitest": "^3.1.1",
        "xvfb-maybe": "^0.2.1"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "edgedriver",
            "esbuild",
            "geckodriver",
            "unrs-resolver"
        ]
    },
    "lint-staged": {
        "**/*.{yml,json,md}": [
            "prettier --write --cache"
        ],
        "**/*.{cts,mts,cjs,mjs,ts,js}": [
            "prettier --write --cache",
            "eslint --fix --cache --cache-location node_modules/.cache/eslint/"
        ]
    }
}
