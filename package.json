{
  "name": "vscode-webdriverio",
  "displayName": "vscode-webdriverio",
  "description": "A VSCode extension for WebdriverIO",
  "version": "0.0.1",
  "publisher": "webdriverio",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-webdriverio.helloWorld",
    "onView:webdriverio"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-webdriverio.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "webdriverio.refreshEntry",
        "title": "Refresh",
        "icon": {
            "light": "resources/light/refresh.svg",
            "dark": "resources/dark/refresh.svg"
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "webdriverio",
          "name": "WebdriverIO",
          "icon": "assets/logo-webdriver-io.svg"
        }
      ],
      "webdriverio": [
        {
          "id": "webdriverio-explorer",
          "name": "WebdriverIO",
          "icon": "assets/logo-webdriver-io.svg",
          "contextualTitle": "WebdriverIO"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "webdriverio",
          "title": "WebdriverIO Testrunner",
          "icon": "assets/logo-webdriver-io.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
            "command": "webdriverio.refreshEntry",
            "when": "view == webdriverio",
            "group": "navigation"
        }
      ]
    }  
  },
  "icon": "assets/webdriverio.svg",
  "galleryBanner": {
    "color": "#ea5906",
    "theme": "light"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3"
  }
}
